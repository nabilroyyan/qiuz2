<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <div class="container">
    <% if (messages.success) { %>
      <div class="alert alert-info" role="alert">
       <%- messages.success %>
      </div>
    <% } %>
    <div class="row">
      <div class="col py-5">
        <a href="/produk/create" class="btn btn-sm btn-success mb-3">Tambah</a>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Foto</th>
              <th scope="col">Nama</th>
              <th scope="col">Harga</th>
              <th scope="col">Kapal</th>
              <th scope="col" colspan="2">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < data.length; i++){ %>
              <tr>
                <th scope="row"><%= (i+1) %></th>
                <td><img src="/images/upload/<%= data[i].foto_produk %>" alt="<%= data[i].foto_produk %>" height="70"></td>
                <td><%= data[i].nama_produk %></td>
                <td><%= data[i].harga_produk %></td>
                <td><%= data[i].nama_kapal %></td>
                <td>
                  <a href="/produk/edit/<%= data[i].id_produk %>" class="btn btn-sm btn-warning">Edit</a>
                </td>
                <td>
                  <a href="/produk/delete/<%= data[i].id_produk %>" class="btn btn-sm btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
