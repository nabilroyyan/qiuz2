<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Dashboard - SB Admin</title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
        <link href="css/styles.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    </head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">kapal App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="./kapal">kapal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../dpi">dpi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../alat_tangkap">alat_tangkap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../pemilik">pemilik</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (messages.success) { %>
            <div class="alert alert-info" role="alert">
                <%= messages.success %>
            </div>
            <% } %>

        <!-- Tambahkan bagian ini untuk menampilkan tabel Pendidikan -->
        <div class="row">
            <div class="col py-3">
                <a href="/kapal/create" class="btn btn-sm btn-success mb-3">Tambah kapal</a>
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">nama kapal</th>
                            <th scope="col">alat </th>
                            <th scope="col">dpi</th>
                            <th scope="col">pemilik</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].nama_kapal %></td>
                            <td><%= data[i].nama_alat %></td>
                            <td><%= data[i].nama_dpi %></td>
                            <td><%= data[i].nama_pemilik %></td>
                            <td>
                                <a href="/kapal/edit/<%= data[i].id_kapal %>"
                                    class="btn btn-sm btn-warning">Edit</a>
                            </td>
                            <td>
                                <a href="/kapal/delete/<%= data[i].id_kapal %>"
                                    class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Akhir bagian untuk menampilkan tabel Pendidikan -->

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>

</html>
